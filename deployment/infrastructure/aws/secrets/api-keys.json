{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Secrets Manager secret for accelerapp/api/keys",
  "Resources": {
    "Secret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Name": "accelerapp/api/keys",
        "Description": "API keys and tokens for Accelerapp",
        "Tags": [
          {
            "Key": "Purpose",
            "Value": "API"
          },
          {
            "Key": "Environment",
            "Value": "production"
          },
          {
            "Key": "ManagedBy",
            "Value": "accelerapp"
          }
        ]
      }
    }
  },
  "Outputs": {
    "SecretArn": {
      "Description": "ARN of the secret",
      "Value": {
        "Ref": "Secret"
      },
      "Export": {
        "Name": "accelerapp/api/keys-arn"
      }
    },
    "SecretName": {
      "Description": "Name of the secret",
      "Value": "accelerapp/api/keys"
    }
  }
}